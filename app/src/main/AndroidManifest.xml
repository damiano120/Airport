            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="damiano.airports.MainActivity" />
        </activity>
        <activity
            android:name=".GDN.GdanskGDNArrivals"
            android:label="@string/title_activity_gdansk_gdnarrivals"
