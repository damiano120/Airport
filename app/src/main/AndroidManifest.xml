            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="damiano.airports.GDN.GdanskGDN" />
        </activity>
        <activity
            android:name=".FlightDetalis"
            android:label="@string/title_activity_gdansk_gdnarrival"
            android:parentActivityName=".GDN.GdanskGDNArrivals"
