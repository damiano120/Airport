            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="damiano.airports.GDN.GdanskGDN" />
        </activity>
        <activity
            android:name=".GDN.GdanskGDNDepartures"
            android:label="@string/title_activity_gdansk_gdndepartures"
