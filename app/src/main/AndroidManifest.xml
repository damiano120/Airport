        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BZG.BydgoszczBZG"
            android:label="@string/title_activity_bydgoszcz_bzg"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="damiano.airports.MainActivity" />
        </activity>
        <activity
            android:name=".BZG.BydgoszczBZGFlights"
            android:label="@string/title_activity_bydgoszcz_bzgflights"
