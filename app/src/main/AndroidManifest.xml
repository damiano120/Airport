        </activity>
        <activity
            android:name=".BZG.BydgoszczBZGArrivals"
            android:label="@string/title_activity_bydgoszcz_bzgarrivals"
            android:parentActivityName=".BZG.BydgoszczBZG"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="damiano.airports.BZG.BydgoszczBZG" />
        </activity>
        <activity
            android:name=".BZG.BydgoszczBZGDepartures"
            android:label="@string/title_activity_bydgoszcz_bzgdelivers"
            android:parentActivityName=".BZG.BydgoszczBZG"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="damiano.airports.BZG.BydgoszczBZG" />
        </activity>
        <activity
            android:name=".GDN.GdanskGDN"
            android:label="@string/title_activity_gdansk_gdn"
